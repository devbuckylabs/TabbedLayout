<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="text_status_color">@color/colorAccent</item>
        <item name="button_color">@color/colorPrimary</item>
        <item name="button_text_color">@color/white</item>
        <item name="checkbox_tintcolor">@color/black_light</item>
        <item name="android:actionBarStyle">@style/AppTheme.DarkActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gold</item>
        <item name="background_color">@color/black_light</item>
        <item name="text_color">@color/white</item>
        <item name="text_status_color">@color/gold</item>
        <item name="button_color">@color/gold</item>
        <item name="button_text_color">@color/white</item>
        <item name="checkbox_tintcolor">@color/white</item>
        <item name="android:actionBarStyle">@style/DarkTheme.DarkActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>



    <style name="PreferencesDarkTheme">
        <item name="colorPrimary">@color/black_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:windowBackground">@color/black_light</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionBarStyle">@style/MyActionBarDark</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>


    </style>

    <style name="MyActionBarDark" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/gold</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="Theme.MyAppThemeDark.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PreferencesTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:background">@color/gold</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
       <!-- <item name="android:colorControlHighlight">@color/colorAccent</item>-->
        <item name="android:editTextBackground">@color/black</item>

    </style>




    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="DarkTheme.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/black_light</item>

    </style>


    <style name="DarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black_light</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>